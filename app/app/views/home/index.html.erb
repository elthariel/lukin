<div class="min-h-screen bg-slate-900">
  <section id="hero" class="pt-16 pb-20 px-4 text-center">
    <div class="w-24 h-24 bg-gradient-to-r from-yellow-700 to-yellow-800 rounded-full mx-auto mb-6 flex items-center justify-center shadow-lg shadow-yellow-700/40">
      <img src="/hogwarts_xp_logo_512.png" alt="Hogwarts Experience Logo" class="w-16 h-16">
    </div>

    <h1 class="text-4xl font-bold mb-4 font-serif tracking-wide">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-yellow-300 via-purple-400 to-pink-500 drop-shadow-md">
        <%= t '.hero.title' %>
      </span>
    </h1>
    <p class="text-slate-400 text-lg mb-8 italic">
      <%= t '.hero.tagline' %>
    </p>

    <div class="max-w-2xl mx-auto px-4 pb-12 text-center">
      <%= link_to(
        universes_path,
        id: 'hero-cta',
        class: %w[bg-yellow-600 hover:bg-yellow-700 text-black font-bold text-lg px-8 py-2
                  rounded-lg shadow-md inline-flex items-center justify-center h-auto
                  hover:scale-105 transition-all duration-200]) do %>
        <%= t '.hero.action' %>
      <% end %>

      <p class="text-sm text-slate-400 mt-2 italic">
        <%= t '.hero.action_anon' %>
      </p>
    </div>
  </section>

  <div class="grid grid-cols-2 gap-4 px-4 mb-12">
    <% (0..3).each do |idx| %>
      <div class="bg-slate-800 border border-slate-700 hover:border-yellow-500
                  transition-all duration-300 p-4 text-center rounded-lg shadow-sm hover:shadow-yellow-800/40">
        <div class="text-yellow-400 mb-3 text-2xl">
          <%= t ".feature_#{idx}.emoji" %>
        </div>
        <h3 class="font-semibold mb-2 text-sm text-white tracking-wide">
          <%= t ".feature_#{idx}.title" %>
        </h3>
        <p class="text-slate-400 text-xs">
          <%= t ".feature_#{idx}.desc" %>
        </p>
      </div>
    <% end %>
  </div>

  <section class="text-center px-4 pb-20">
    <div class="bg-gradient-to-r from-blue-500/10 to-purple-600/10 border border-blue-500/30
                rounded-lg p-6 shadow-md shadow-purple-900/30">
      <div class="text-yellow-400 text-4xl mb-4">üèÜ</div>
      <h3 class="text-xl font-bold mb-2 text-white font-serif">
        <%= t '.stats.title' %>
      </h3>
      <p class="text-slate-400 mb-4 italic">
        <%= t '.stats.subtitle' %>
      </p>
      <div class="flex justify-center space-x-8 text-sm text-white">
        <div class="text-center">
          <div class="text-2xl font-bold text-yellow-400"><%= @players_count %>+</div>
          <div class="text-slate-400"><%= t '.stats.players' %></div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-purple-400"><%= @games_count %>+</div>
          <div class="text-slate-400"><%= t '.stats.games' %></div>
        </div>
        <div class="text-center">
          <div class="text-2xl font-bold text-green-400"><%= @messages_count %></div>
          <div class="text-slate-400"><%= t '.stats.messages' %></div>
        </div>
      </div>
    </div>
  </section>

  <section id="faq" class="max-w-3xl mx-auto px-6 pb-20">
    <h2 class="text-2xl font-bold text-white font-serif mb-6 text-center"><%= t('.faq.title') %></h2>

    <div class="space-y-6">
      <div>
        <h3 class="text-lg font-semibold text-yellow-400"><%= t('.faq.q1.title') %></h3>
        <p class="text-slate-300 text-sm mt-2"><%= t('.faq.q1.body') %></p>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-yellow-400"><%= t('.faq.q2.title') %></h3>
        <p class="text-slate-300 text-sm mt-2"><%= t('.faq.q2.body') %></p>
      </div>
      <div>
        <h3 class="text-lg font-semibold text-yellow-400"><%= t('.faq.q3.title') %></h3>
        <p class="text-slate-300 text-sm mt-2"><%= t('.faq.q3.body') %></p>
      </div>
    </div>
  </section>

  <section class="max-w-2xl mx-auto px-4 pb-12 text-center">
    <%= link_to(
      t('.hero.action'),
      universes_path,
      class: %w[bg-yellow-600 hover:bg-yellow-700 text-black font-bold text-lg px-8 py-2
                rounded-lg shadow-md inline-flex items-center justify-center h-auto
                hover:scale-105 transition-all duration-200]
    ) %>

    <p class="text-sm text-slate-400 mt-2 italic">
      <%= t '.hero.action_anon' %>
    </p>
  </section>

  <section class="flex flex-col items-center max-w-2xl mx-auto px-4 pb-12 text-center my-8 p-4
              space-y-4">
    <h2 class="text-xl font-semibold text-blurple"><%= t('.discord.cta') %></h2>
    <%= link_to(
      SOCIAL.dig(:discord, :url),
      class: %w[p-4 border border-blurple/50 rounded-lg hover:shadow hover:border-blurple]
    ) do %>
      <%= image_tag '/discord_logo_blurple.svg', alt: 'Discord logo', class: 'h-6' %>
    <% end %>
    <h2 class="text-slate-300 font-lg"><%= t('.discord.text') %></h2>
  </section>
</div>
